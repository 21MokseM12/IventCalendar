<resources>
    <!-- Base application theme. -->
    <style name="Theme.EventCalendar" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/teal_200</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorOnPrimary</item>
        <!-- Customize your theme here. -->
        <item name="windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>

        <item name="android:fontFamily">@font/deledda</item>
    </style>

    <style name="Theme.EventCalendar.NoActionBar" parent="Theme.EventCalendar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="colorOnSecondary">@color/white</item>
    </style>

    <style name="Theme.EventCalendar.NoActionBar.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.EventCalendar.NoActionBar.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.EventCalendar.NoActionBar.PopupOverlay">
        <item name="android:textColor">@color/black</item>
        <item name="background">@color/white</item>
    </style>
    <style name="tab_text" parent="Widget.MaterialComponents.TabLayout">
        <item name="android:fontFamily">@font/deledda</item>
    </style>
</resources>